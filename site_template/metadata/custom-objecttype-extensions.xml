<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <custom-type type-id="OUT_OF_STOCK_SUBSCRIPTION">
        <display-name xml:lang="x-default">Subscription for products out of stock</display-name>
        <staging-mode>no-staging</staging-mode>
        <storage-scope>site</storage-scope>
        <key-definition attribute-id="productID">
            <display-name xml:lang="x-default">Product Id</display-name>
            <type>string</type>
            <min-length>0</min-length>
        </key-definition>
        <attribute-definitions>
            <attribute-definition attribute-id="phoneNumbers">
                <display-name xml:lang="x-default">Phone Numbers</display-name>
                <type>set-of-string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </attribute-definitions>
        <group-definitions>
            <attribute-group group-id="subscription">
                <display-name xml:lang="x-default">Subscription</display-name>
                <attribute attribute-id="productID"/>
                <attribute attribute-id="phoneNumbers"/>
            </attribute-group>
        </group-definitions>
    </custom-type>
    <custom-type type-id="PHONE_VERIFICATION">
        <display-name xml:lang="x-default">Phone verification for product subscription</display-name>
        <staging-mode>no-staging</staging-mode>
        <storage-scope>site</storage-scope>
        <retention-days>1</retention-days>
        <key-definition attribute-id="verifyCode">
            <display-name xml:lang="x-default">Verification code</display-name>
            <type>string</type>
            <min-length>0</min-length>
        </key-definition>
        <attribute-definitions>
            <attribute-definition attribute-id="expirationTime">
                <display-name xml:lang="x-default">Expiration Time</display-name>
                <type>datetime</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="phoneNumbers">
                <display-name xml:lang="x-default">Phone Numbers</display-name>
                <type>string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Phone Verification">
                <display-name xml:lang="x-default">Phone Verification</display-name>
                <attribute attribute-id="verifyCode"/>
                <attribute attribute-id="expirationTime"/>
                <attribute attribute-id="phoneNumbers"/>
            </attribute-group>
        </group-definitions>
    </custom-type>
    
</metadata>
