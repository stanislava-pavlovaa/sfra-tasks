{
    "compilerOptions": {
        "noLib": true,
        "target": "es5",
        "baseUrl": "./",
        "paths": {
            "*": ["./*", "modules/*", "/path/to/dw-api-types/*"]
        }
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "/path/to/dw-api-types/**/*.d.ts",
        "./*/cartridge/scripts/**/*.js",
        "./*/cartridge/controllers/**/*.js",
        "./modules/**/*.js"
    ]
}
